{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true
  },
  "files": ["index.ts"],
  "exclude": ["node_modules", "dist"]
}
